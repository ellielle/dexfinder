<p><%= @post.body %></p>

<% unless @post.user == current_user %>
  <p class="like-button"><%= button_to(@button, post_likes_path(@post.slug), remote: true,
                                       id: "btn-like") %></p>
<% end %>

<div class="posted-by">
  <%= render "post_date_author", post: @post %>
  <p><small id="like-count"><%= "#{pluralize(@post.likes.count, "like")}" %></small></p>
</div>

<div class="post-comments">
  <p>COMMENTS GO HERE</p>
</div>
