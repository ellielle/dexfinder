<header>
  <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag("DeXFindeR_shadow.png", class: "navbar-brand") %>
      <% end %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Posts', posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Post', new_post_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <span id="friend-requests-count">
              <%= current_user.incoming_friend_requests.count %>
            </span>
            <%= link_to self_profile_path do %>
              <% if user_has_request? %>
                <%= octicon "mail", class: "mail-icon", style: "fill: orangered;" %>
              <% else %>
                <%= octicon "mail-read", class: "mail-icon" %>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item dropdown nav-right-item">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.username %><span class="caret"></span>
            </a>
            <div class="dropdown-menu">
              <%= link_to "Profile", self_profile_path, class: "dropdown-item" %>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Sign out", sign_out_path, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item nav-right-item">
            <%= link_to "Become a member", sign_up_path, class: "nav-link" %>
          </li>
          <li class="nav-item nav-right-item">
            <%= link_to "Sign in", sign_in_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>