<div class="row">
  <div class="col-md-1">
    <%= render partial: 'shared/user_profile_picture', locals: { user: current_user } %>
  </div>
  <div class="col-md-7">
    <div id="user-profile-info">
      <p class="profile"><%= current_user.username %></p>
      <p class="profile"><%= "Posts: #{current_user.posts.count}" %></p>
    </div>
  </div>
  <div class="col-md-4">
    <aside id="profile-pokedex-aside">
      <div>
        POKEDEX GOES HERE
      </div>
    </aside>
  </div>
</div>

<aside id="friend-list-aside">
  <div id="pending-incoming-requests">
    <% unless @requests.nil? || @requests.none? %>
      <%= render partial: 'pending_requests', locals: { requests: @requests } %>
    <% end %>
  </div>

  <div id="current-friends-list">
    <% unless @friends.nil? || @friends.none? %>
      <%= render partial: 'friend_list', locals: { friends: @friends } %>
    <% end %>
  </div>

  <div id="potential-friend-list">
    <%= render partial: 'users/potential_friends', locals: { potential_friends: @potential_friends } %>
  </div>
</aside>

<div id="posts-created">
  <% unless current_user.posts.empty? %>
    <%= render partial: 'users/user_posts' %>
  <% end %>
</div>
